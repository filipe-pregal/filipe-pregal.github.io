<LinearLayout tools:context=".ui.login.ListMenusUser" android:paddingTop="5dp" android:paddingLeft="16dp" android:orientation="vertical" android:layout_height="match_parent" android:layout_width="wrap_content" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:orientation="horizontal" android:layout_height="wrap_content" android:layout_width="match_parent">

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_marginLeft="20dp" android:text="Requests" android:id="@+id/seeRequests"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_marginLeft="20dp" android:text="Edit Menus" android:id="@+id/editMenus"/>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_centerHorizontal="true" android:layout_marginLeft="20dp" android:text="Edit Extras" android:id="@+id/editExtras"/>

</LinearLayout>

    <TextView android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Drinks Availability" android:id="@+id/seeDrinks" android:visibility="gone" android:textAlignment="center" android:textStyle="bold" android:textSize="20dp" android:textColor="#000" android:layout_margin="5dp"/>

    <ListView android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/listViewDrinks" android:dividerHeight="0dp" android:divider="@null" android:isScrollContainer="true"> </ListView>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Edit Drinks " android:id="@+id/editDrinks" android:visibility="gone" android:enabled="true" android:layout_gravity="right"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="105dp" android:text="Desserts Availability" android:id="@+id/seeDesserts" android:visibility="gone" android:textAlignment="center" android:textStyle="bold" android:textSize="20dp" android:textColor="#000" android:layout_marginTop="10dp"/>

    <ListView android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/listViewDesserts" android:visibility="gone" android:dividerHeight="0dp" android:divider="@null" android:isScrollContainer="true"> </ListView>

    <Button android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="Edit Desserts" android:id="@+id/editDesserts" android:visibility="gone" android:enabled="true" android:layout_gravity="right"/>

</LinearLayout>