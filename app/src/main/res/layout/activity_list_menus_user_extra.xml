<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.login.ListMenusUserExtra"
    android:id="@+id/container"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/preview"
        app:layout_constraintTop_toTopOf="@id/container"
        >


    <ImageView
        android:id="@+id/imageExtra"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/clock_icon"/>

    <TextView
        android:id="@+id/menuName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:paddingLeft="8dp"
        android:paddingBottom="6dp"
        android:text="hamburguer"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bg"
        />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/addToCart"
        app:layout_constraintTop_toBottomOf="@id/preview"
        app:layout_constrainedHeight="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/seeDrinksUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        android:text="Drinks"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        />

        <RadioGroup
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/drinksGroup"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:layout_marginBottom="8dp">

    </RadioGroup>

    <TextView
        android:id="@+id/seeDessertsUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Desserts"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        android:paddingLeft="16dp"
        />

        <RadioGroup
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:id="@+id/dessertsGroup"
            android:orientation="vertical"
            android:paddingLeft="16dp"
            android:layout_marginBottom="8dp">
        </RadioGroup>

    </LinearLayout>

    </ScrollView>

    <Button
        android:id="@+id/addToCart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to Cart"
        style="?android:attr/borderlessButtonStyle"
        android:background="#0a72cb"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="@id/container"/>

</androidx.constraintlayout.widget.ConstraintLayout>